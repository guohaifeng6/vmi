<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_logout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vmi_bg_round_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="提示"
        android:textSize="20sp"
        android:textColor="@color/vmi_black"/>


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:text="签到成功，获得200积分"
            android:textSize="16sp"
            android:textColor="@color/vmi_font_common_1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/vmi_commom_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/vmi_bg_dialog_left_white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/vmi_font_blue"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/vmi_commom_background" />

        <TextView
            android:id="@+id/positive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/vmi_bg_dialog_right_white"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/vmi_font_blue"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>